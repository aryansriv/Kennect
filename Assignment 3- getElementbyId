//getElementById
// It returns an object representing an element whose id matches the specified string.Since ids are unique, it is a very useful way to access any element.
// Its syntax is:
    const element = document.getElementById(id)
// Without using getElementbyId , we can access any element by using getElementsByClassName:

var a = document.getElementsByClassName("computer-file");
for(i = 0;i < a.length;i++){
	var b = a[i];                                       // current element
	if(b.innerText.indexOf("mouse") != -1){             //let us say if we want to access the file named mouse
		console.log("remove it from the page: ");
		b.style.display = "none";
		break;
	}
}
