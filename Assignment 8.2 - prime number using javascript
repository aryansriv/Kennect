//to check whether the number is prime or not
 function prime(x)
{

  if (x==1 || x<1)
  {
    return false;
  }
  else if(x == 2)
  {
    return true;
  }else
  {
    for(var i = 2; i < x; i++)
    {
      if(x % i == 0)
      {
        return false;
      }
    }
    return true;  
  }
}
 //next prime
function nextPrime(x) {
    for (var i = x + 1;; i++) {
        var isPrime = true;
        for (var a = 2; a * a <= i; a++) {
            if (i % a === 0) {
                isPrime = false;
                break;
            }
        }
        if (isPrime) {
            return i;
        }
    }
}
var result = console.log(nextPrime(x)-x);  // let say x = 23 and next prime number is 29 so diff is (29-23) 6 which is shown t the output.

